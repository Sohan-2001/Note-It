<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Add a gradient for a modern, sleek look covering the whole page -->
    <gradient
        android:startColor="#FFA500"
        android:endColor="#fbffeb"
        android:angle="270" />

    <!-- No corner radius for full-page coverage -->
    <corners
        android:radius="0dp" />

    <!-- Optional padding to create space between the shape and its content -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="15dp"
        android:bottom="15dp" />

    <!-- Full size to cover the entire screen -->

</shape>
